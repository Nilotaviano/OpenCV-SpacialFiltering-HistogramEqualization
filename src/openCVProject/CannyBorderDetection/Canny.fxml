<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8"
          fx:controller="openCVProject.CannyBorderDetection.CannyController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints/>
    </rowConstraints>
    <HBox alignment="CENTER_LEFT" minHeight="25" minWidth="0">
        <Button minHeight="25.0" minWidth="48.0" mnemonicParsing="false" onAction="#returnToPreviousState"
                prefHeight="25.0" prefWidth="64.0" text="Voltar"/>
    </HBox>
    <VBox alignment="CENTER" minHeight="0" minWidth="0" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
        <HBox alignment="CENTER" minHeight="0" minWidth="0" spacing="10.0">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <CheckBox fx:id="chkBorderDetection" mnemonicParsing="false" onAction="#detectBordersSelectionChanged"
                      text="Detecção de bordas"/>
            <Label text="Limiar"/>
            <Slider fx:id="threshholdSlider"/>
        </HBox>
        <Separator prefWidth="200.0"/>
        <HBox alignment="CENTER">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true"/>
        </HBox>
    </VBox>
</GridPane>
